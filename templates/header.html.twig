{% extends 'base.html.twig' %}
    
        {% block body %}
        <body>
                        <div class="head_logo">
                <img src="../images/2022-Greenwich-Eng.png" alt="Logo">
            </div>
            <nav class="navbar navbar-expand-lg justify-content-center" style="background-color: #2C74B3;">
                <a id="Logo" href="/homepage" class="navbar-brand">
                    Greenwich Clubs
                    <!-- <img src="../ASM2/Images/ESC Logo (1)-02.png" alt="" style="height: 50px; width: 50px;"> -->
                </a>
                <style>
                    *{
                        font-family:'Quicksand', sans-serif !important;
                    }
                    body{
                        font-weight: 500 !important;
                    }
                    #Logo.navbar-brand{
                        padding-left: 20px;
                    }
                    nav.navbar{
                        font-weight: 600;
                    }
                    nav.navbar{
                        padding: 20px;
                    }
                    .head_logo{
                        display: flex;
                        align-items: center;
                        justify-content: center;
                    }
                    .head_logo img{
                        width: 270px;
                    }
                    a.second{
                        padding-left:10px; 
                    }
