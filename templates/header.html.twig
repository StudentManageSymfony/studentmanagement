                </div>
            </div>
                {% if app.user %}
                    <a href="#" class="nav-item nav-link first">Welcome {{app.user.userIdentifier }} </a>  
                    <a href="{{path('Logout')}}" class="nav-item nav-link second">Logout</a>            
                {% endif %}
            </nav>


    </body>
        {% endblock %}
    
