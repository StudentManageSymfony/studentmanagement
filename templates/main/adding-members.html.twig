                    {# {{ form_widget(formname, {'attr':{'type':'file'}, {'class':'form-control'}, {'id':'Pro_image'}, {'value':''}, {'name':'Pro_image'} }) }} #}
                </div>

                <div class="formbold-btn"> {{ form_widget(form.submit, {'attr':{'class':''}}) }} </div>
                {# <div class="formbold-btn"> #}
                    
                {# </div> #}
                
            {# </form> #}
            {{ form_end(form) }}
            </div>
        </div>
    </div>

