{% extends 'base.html.twig' %}

{% block title %}Add Members{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('styles/adding-members-style.css')}}">
{% endblock %}

{% block body %}
        {% include 'header.html.twig' %}

    <div class="title">
        ADD MEMBER
    </div>
    <div class="box">
        <div class="formbold-main-wrapper">
            <div class="formbold-form-wrapper">
            <form action="" method="POST">
            {# {{ form_start(form) }} #}
                <div class="formbold-input-flex">
                    <div>
                        <label for="firstname" class="formbold-form-label"> Member ID: </label>
                        <input type="text" name="" id="" placeholder="Ex: GCC210147" class="formbold-form-input"/>
                        {# {{ form_widget(form, {'attr':{'class':'formbold-form-input'} }) }} #}
                    </div>
                    <div>
                        <label for="lastname" class="formbold-form-label"> Member Name: </label>
                        <input type="text" name="memberName" id="lastname" placeholder="Ex Nguyễn Văn A" class="formbold-form-input"/>
                        {# {{ form_widget(formname, {'attr':{'type':'text'}, {'class':'formbold-form-input'}, {'id':'lastname'}, {'placeholder':'Ex Nguyễn Văn A'}, {'name':'memberName'} }) }} #}
                    </div>
                </div>

                <div class="formbold-input-flex">
                    <div>
                        <label for="" class="formbold-form-label"> Club Name: </label>
                        <select type="" name="" id="" placeholder="Ex: English Speaking"class="formbold-form-input">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        </select>
                    </div>
                    <div>
                        <label for="phone" class="formbold-form-label"> Club ID: </label>
                        <input type="text" name="" id="" placeholder="Ex: GC101" class="formbold-form-input"/>
                        {# {{ form_widget(formname, {'attr':{'type':'text'}, {'class':'formbold-form-input'}, {'id':''}, {'placeholder':'Ex: GC101'}, {'name':''} }) }} #}
                    </div>
                </div>

                <div class="formbold-input-radio-wrapper">
                    <label for="jobtitle" class="formbold-form-label">Role:  </label>

                    <div class="formbold-radio-flex">
                        <div class="formbold-radio-group">
                        <label class="formbold-radio-label">
                            <input class="formbold-input-radio" type="radio" name="jobtitle" id="jobtitle" value="">
                            {# {{ form_widget(formname, {'attr':{'type':'radio'}, {'class':'formbold-input-radio'}, {'id':'jobtitle'}, {'value':''}, {'name':'jobtitle'} }) }} #}
                            Leader
                            <span class="formbold-radio-checkmark"></span>
                        </label>
                        </div>

                        <div class="formbold-radio-group">
                        <label class="formbold-radio-label">
                            <input class="formbold-input-radio" type="radio" name="jobtitle" id="jobtitle" value="">
                            {# {{ form_widget(formname, {'attr':{'type':'radio'}, {'class':'formbold-input-radio'}, {'id':'jobtitle'}, {'value':''}, {'name':'jobtitle'} }) }} #}
                            Vice Leader
                            <span class="formbold-radio-checkmark"></span>
                        </label>
                        </div>

                        <div class="formbold-radio-group">
                        <label class="formbold-radio-label">
                            <input class="formbold-input-radio" type="radio" name="jobtitle" id="jobtitle" value="">
                            {# {{ form_widget(formname, {'attr':{'type':'radio'}, {'class':'formbold-input-radio'}, {'id':'jobtitle'}, {'value':''}, {'name':'jobtitle'} }) }} #}
                            Cashier
                            <span class="formbold-radio-checkmark"></span>
                        </label>
                        </div>

                        <div class="formbold-radio-group">
                        <label class="formbold-radio-label">
                            <input checked class="formbold-input-radio" type="radio" name="jobtitle" id="jobtitle">
                            {# {{ form_widget(formname, {'attr':{'type':'radio'}, {'class':'formbold-input-radio'}, {'id':'jobtitle'}, {'name':'jobtitle'} }) }} #}
                            Member
                            <span class="formbold-radio-checkmark"></span>
                        </label>
                        </div>
                </div>
                <div class="formbold-form-label">
                    <label class="photo"  for="image-vertical">Image: </label>
                    <input type="file" name="Pro_image" id="Pro_image" class="form-control" value="">
                    {# {{ form_widget(formname, {'attr':{'type':'file'}, {'class':'form-control'}, {'id':'Pro_image'}, {'value':''}, {'name':'Pro_image'} }) }} #}
                </div>
                <button class="formbold-btn">
                    Submit
                </button>
            </form>
            </div>
        </div>
    </div>

        {% include 'footer.html.twig' %}
{% endblock %}
