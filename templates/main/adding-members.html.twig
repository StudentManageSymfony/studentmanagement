{% endblock %}

{% block body %}
        {% include 'header.html.twig' %}

    <div class="title">
        ADD MEMBER
    </div>
    <div class="box">
        <div class="formbold-main-wrapper">
            <div class="formbold-form-wrapper">
            {# <form action="" method="GET"> #}
            {{ form_start(form) }}
            
                
            
            {# {{ form_start(form) }} #}
                <div class="formbold-input-flex">
                    <div name="StudentId">
                        <label for="firstname" class="formbold-form-label"> Student ID: </label>
                        <input type="text" name="studentID" id="studentID" class="formbold-form-input"
                        value="{{studentId}}"/>
                        {# <input type="text" name="" id="" placeholder="Ex: GCC210147" class="formbold-form-input"/> #}
                        {# {{ form_widget(form.accountId, {'attr':{'class':'formbold-form-input'} }) }} #}
