{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('styles/account-style.css')}}">
{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}


    <div class="heading">
        <h4>ACCOUNT INFORMATION</h4>
    </div>
    
    {% if is_granted("ROLE_ADMIN") %}
        <div class="btn-show">
            <div class="add-members">
                <a href="/addingaccount"><button class="add"> Add new</button></a>
            </div>
        </div>
    {% endif %}
    
                
    


    <div class="cover"> 
        <div class="pr">
            <form class="row g-3">
                <div class="col-md-6">
                {% for acc in account %}
                    
                    <label for="inputId" class="form-label">Member ID: {{acc.studenId}}</label>
                    {# <input type="email" class="form-control" id="inputId" readonly> #}
                    {# {{ form_widget(account.studenId, {'attr':{'class':'form-control'} }) }} #}
                </div>
                <div class="col-md-6">
                    <label for="inputName" class="form-label">Member Name: {{acc.studenName}}</label>
                    {# <input type="text" class="form-control" id="inputName" readonly> #}
                    {# {{ form_widget(account.studenName, {'attr':{'class':'form-control'} }) }} #}
                    {# {{ form_widget(formname, {'attr':{'type':'text'}, {'class':'form-control'}, {'id':'inputName'}, {'readonly'} }) }} #}
                </div>
                <div class="col-6">
                    <label for="inputEmail" class="form-label">Email: {{acc.email}}</label>
                    {# <input type="email" class="form-control" id="inputEmail" readonly> #}
                    {# {{ form_widget(account.email, {'attr':{'class':'form-control'} }) }} #}
                    {# {{ form_widget(formname, {'attr':{'type':'email'}, {'class':'form-control'}, {'id':'inputEmail'}, {'placeholder':'Ex: datdmgcc21047@fpt.ed.vn'} }) }} #}
                </div>
                <div class="col-6">
                    <label for="inputDate" class="form-label">Date of Birth: {{acc.dateOfBirth|date('d/m/Y')}}</label >
                    {# <input type="date" class="form-control" id="inputDate" readonly> #}
                    {# {{ form_widget(account.dateOfBirth, {'attr':{'class':'form-control'} }) }} #}
                    {# {{ form_widget(formname, {'attr':{'type':'date'}, {'class':'form-control'}, {'id':'inputDate'} }) }} #}
                </div>
                <div class="col-6">
                    <label for="inputMajor" class="form-label">Major: {{acc.major}}</label>
                    {# <input type="text" class="form-control" id="inputMajor" readonly> #}
                    {# {{ form_widget(account.major, {'attr':{'class':'form-control'} }) }} #}
                </div>
                <!-- Check -->
                <div class="check col-md-6">
                {% if acc.gender == true %}
                <label for="inputGender" class="form-label">Gender: Male</label>
                {# <input type="text" class="form-control" id="inputGender" readonly> #}
                {% else %}
                <label for="inputGender" class="form-label">Gender: Female</label>
                {% endif %}

                {% endfor %}
                </div>
            </form>
        </div>
    </div>


    {% include 'footer.html.twig' %}
{% endblock %}